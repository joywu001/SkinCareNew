<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/breidge_2"
    tools:context=".Skin_FuncProd">

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="功能商品選單"
            android:textSize="45sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/funcPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/func" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/toner"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:layout_marginTop="8dp"
                android:onClick="func_toner"
                android:text="化妝水"
                android:textColor="#514F4F"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/essence"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:onClick="func_essence"
                android:text="精華液"
                android:textColor="#514F4F"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toner" />

            <Button
                android:id="@+id/lotion"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:onClick="func_lotion"
                android:text="乳液"
                android:textColor="#514F4F"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/toner"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/cream"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:onClick="func_cream"
                android:text="乳霜"
                android:textColor="#514F4F"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/essence"
                app:layout_constraintTop_toBottomOf="@+id/lotion" />

            <Button
                android:id="@+id/eyeCream"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:onClick="func_eyeCream"
                android:text="眼霜"
                android:textColor="#514F4F"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/mask"
                app:layout_constraintTop_toBottomOf="@+id/cream" />

            <Button
                android:id="@+id/mask"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:onClick="func_mask"
                android:text="面膜"
                android:textColor="#514F4F"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/essence" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>