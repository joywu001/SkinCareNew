<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Skin_Process">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/Ptitle"
                        android:layout_width="400dp"
                        android:layout_height="180dp"
                        android:layout_marginStart="-5dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginEnd="-5dp"
                        android:src="@drawable/process_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/remove"
                        android:layout_width="108dp"
                        android:layout_height="129dp"
                        android:layout_marginStart="0dp"
                        android:src="@drawable/process_takeoff"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Ptitle" />


                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="182dp"
                        android:layout_height="105dp"
                        android:layout_marginStart="-10dp"
                        android:src="@drawable/process_info_takeoff"
                        app:layout_constraintBottom_toBottomOf="@id/remove"
                        app:layout_constraintStart_toEndOf="@+id/remove"
                        app:layout_constraintTop_toTopOf="@+id/remove" />

                    <ImageView
                        android:id="@+id/wash"
                        android:layout_width="89dp"
                        android:layout_height="174dp"
                        android:layout_marginStart="15dp"
                        android:src="@drawable/process_washing"
                        app:layout_constraintBottom_toBottomOf="@id/cleanInfo"
                        app:layout_constraintStart_toEndOf="@+id/cleanInfo"
                        app:layout_constraintTop_toTopOf="@+id/cleanInfo"
                        app:layout_constraintVertical_bias="0.477" />

                    <ImageView
                        android:id="@+id/cleanInfo"
                        android:layout_width="141dp"
                        android:layout_height="86dp"
                        android:layout_marginStart="9dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/process_info_washing"
                        app:layout_constraintBottom_toTopOf="@+id/moistInfo"
                        app:layout_constraintStart_toEndOf="@+id/remove"
                        app:layout_constraintTop_toBottomOf="@+id/imageView" />

                    <ImageView
                        android:id="@+id/moisture"
                        android:layout_width="70dp"
                        android:layout_height="128dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="63dp"
                        android:src="@drawable/process_moisture"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/remove" />

                    <ImageView
                        android:id="@+id/moistInfo"
                        android:layout_width="177dp"
                        android:layout_height="98dp"
                        android:layout_marginStart="13dp"
                        android:src="@drawable/process_info_moisture"
                        app:layout_constraintBottom_toBottomOf="@id/moisture"
                        app:layout_constraintStart_toEndOf="@+id/moisture"
                        app:layout_constraintTop_toTopOf="@+id/moisture"
                        app:layout_constraintVertical_bias="0.533" />

                    <ImageView
                        android:id="@+id/essence"
                        android:layout_width="73dp"
                        android:layout_height="125dp"
                        android:layout_marginStart="3dp"
                        android:src="@drawable/process_essence"
                        app:layout_constraintBottom_toBottomOf="@id/essenceInfo"
                        app:layout_constraintStart_toEndOf="@+id/essenceInfo"
                        app:layout_constraintTop_toTopOf="@+id/essenceInfo"
                        app:layout_constraintVertical_bias="0.483" />

                    <ImageView
                        android:id="@+id/essenceInfo"
                        android:layout_width="173dp"
                        android:layout_height="94dp"
                        android:layout_marginStart="100dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/process_info_essence"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/moistInfo" />

                    <ImageView
                        android:id="@+id/cream"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="100dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/process_cream"
                        app:layout_constraintEnd_toStartOf="@+id/creamInfo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/moisture" />

                    <ImageView
                        android:id="@+id/creamInfo"
                        android:layout_width="177dp"
                        android:layout_height="98dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/process_info_cream"
                        app:layout_constraintBottom_toBottomOf="@id/cream"
                        app:layout_constraintStart_toEndOf="@+id/cream"
                        app:layout_constraintTop_toTopOf="@+id/cream"
                        app:layout_constraintVertical_bias="0.0" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>